#export LS_COLORS='rs=0:di=01;34:ln=01;36:mh=00:pi=40;33'

if [ -x $(which most) ]; then
  export PAGER=most # http://unix.stackexchange.com/a/507
else
 echo "most is not installed!"
fi

export LC_ALL=C
export LANG=en_US.UTF-8
export LANGUAGE=en_US
export LC_ALL=en_US.UTF-8
export EDITOR=vim

alias .="source"
alias rb="ruby"
alias py="python"
alias cdiff="colordiff" # http://www.colordiff.org/
alias tailf="tail -f"

alias r="bundle exec rails"
alias rsb="bundle exec rails s -b 0.0.0.0"
alias rr="bundle exec rake routes"
alias rds="bundle exec rake db:seed"
alias rdd="bundle exec rake db:drop"
alias rdc="bundle exec rake db:create"
alias rdm="bundle exec rake db:migrate"
alias rauto="bundle exec rake db:auto:migrate" # https://github.com/yzhang/auto_migrations_rails4
alias rdr="bundle exec rake db:rollback"
alias rds="bundle exec rake db:schema:load"
alias rtc="bundle exec rake tmp:clear"
alias precompile="bundle exec rake assets:precompile RAILS_ENV=production"
alias rsp="bundle exec rspec"
alias rackup="bundle exec rackup"
alias rbuild="env VERBOSE=true rails db:drop:all db:create:all"

alias es="elasticsearch"
alias redis="redis-server"
# alias vim_install="vim +PluginInstall +qall"
alias -s gz="tar -xzvf"
alias proxy="proxychains4"

# alias Sublime
alias subl='open -a "Sublime Text"'

# bindkey
bindkey \^U backward-kill-line #zsh ctrl-u not work

#alias server='ruby -run -e httpd . -b127.0.0.1 -p3000'
alias server="python -m SimpleHTTPServer"

# system alias
alias ip="ifconfig |grep inet"
alias out_ip="curl ifconfig.me"
alias trash="sudo periodic daily weekly monthly"
alias hiddenfile="defaults write com.apple.finder AppleShowAllFiles -bool false"
alias displayfile="defaults write com.apple.finder AppleShowAllFiles -bool true"
alias t_now="date '+%Y-%m-%d %H:%M:%S' "
alias timestamp="date +%s"
alias t_at='function t_at(){ echo "$1" | date -r $1  +"%Y-%m-%d %H:%M:%S" }; t_at'
alias upper='function _upper(){ echo "$1" | tr "[:lower:]" "[:upper:]" }; _upper'
alias lower='function _lower(){ echo "$1" | tr "[:upper:]" "[:lower:]" }; _lower'

alias Red='RED="\033[0;31m"; echo -e "${RED}$1"'
alias Green='GREEN="\033[0;32m"; echo -e "${GREEN}$1"'
alias Yellow='YELLOW="\033[0;33m"; echo -e "${YELLOW}$1"'
#alias Green='function _green(){ Green="\033[0;32m"; echo -e "${Green}$1" }; _green'

alias dtoff="defaults write com.apple.finder CreateDesktop false; killall Finder"
alias dton="defaults write com.apple.finder CreateDesktop true; killall Finder"

alias cp_ssh_pub="[[ -f ~/.ssh/id_rsa.pub ]] && cat ~/.ssh/id_rsa.pub | pbcopy && echo 'id_rsa.pub cp ok' "

mark () {
  echo -e "\033[0;31m ********** `date +%s` **********"
  echo -e "\e[0m" # No Color
}

code () {
  VSCODE_CWD="$PWD" open -n -b "com.microsoft.VSCode" --args $* ;
}
