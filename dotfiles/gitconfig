[user]
  name = shooter
  email = shooter.hero@gmail.com
[alias]
  d = difftool
  df = diff --word-diff
  cl = clone
  bl = blame --pretty=format:"%h"
  mr = merge
  co = checkout
  ci = commit -m
  st = status
  br = branch
  squash = "!f(){ git reset --soft HEAD~${1} && git commit --edit -m\"$(git log --format=%B --reverse HEAD..HEAD@{1})\"; };f"
  cp = cherry-pick
  up = commit --amend
  sos= reset --hard @{u} #git reset --hard origin/<br-name>
  chs = "!git checkout $1 && git status"
  unstage = reset HEAD
  rollback = reset --soft HEAD^
  undo = "!git reset --soft HEAD^ && git reset HEAD"
  line = log --pretty=oneline
  tree = log --graph --decorate --pretty=oneline --abbrev-commit
  tlog = log --pretty=format:'%Cred%h%Creset - %C(yellow)%an%Creset - %Cgreen%cd%Creset - %s%Creset' --abbrev-commit --date=iso
  revlog = log --pretty=format:'%Cred%h%Creset - %C(yellow)%an%Creset - %Cgreen%cd%Creset - %s%Creset' --abbrev-commit --date=iso --reverse
  count = rev-list --count HEAD
  brname = rev-parse --abbrev-ref HEAD
  rm-lists = ls-files --deleted
  rm-all= "!git rm $(git ls-files --deleted)"
  flog = log  -p -1

[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
[core]
  editor = vim
  excludesfile = ~/.gitignore_global
[diff]
  prompt = false
  tool = vimdiff
[merge]
  tool = vimdiff
[mergetool]
  keepBackup = true
[push]
  default = upstream
[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f
[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true
[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true
